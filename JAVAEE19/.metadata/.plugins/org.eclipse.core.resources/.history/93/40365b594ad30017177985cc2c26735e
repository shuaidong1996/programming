package com.dong.test;

import java.util.Scanner;

public class TestDong{
	public static void main(String[] args) {
		Scanner in = new Scanner(System.in);
		int n = in.nextInt();
		ArrayList<Integer> arr = new ArrayList<Integer>();
		int []bit = new int[n + 1];
		bit[0] = 1;
		bit[1] = 1;
		for(int i = 1; i <= n; ++i) {
			if(n % i == 0) {
				arr.add(i);
			}
			if(0 == bit[i]) {
				for(int j = 2; i * j <= n; ++j) {
					bit[i * j] = 1;
				}
			}
		}
		System.out.print(n + "=");
		int size = arr.size();
		int num = n;
		for(int i = 0; i < size && num > 0; ++i) {
			int a = arr.get(i);
			if(0 == bit[a]) {
				while(num % a == 0) {
					if(n != num) {
						System.out.print("*");
					}
					System.out.print(a);
					num /= a;
				}
			}
		}
	}
}
